<h1 class="titleArea">BURGER SHACK!</h1>

<div class="container">
  <div class="row">
    <div class="col-4">
      <h2>Burgers that have not been munched!</h2>


      <div class="notDevoured">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </div>

    </div>
    <div class="col-4">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="devoured">Has it been munched?</label><br>
          <input type="radio" name="devoured" value="1" checked> Munched!<br>
          <input type="radio" name="devoured" value="0"> Not Munched!
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
    <div class="col-4">
      <h2>Burgers that have been munched!</h2>

      <div class="isDevoured">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </div>

    </div>
  </div>
</div>